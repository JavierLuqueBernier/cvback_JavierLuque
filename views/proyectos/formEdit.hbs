<h4>Crea nuevo proyecto</h4>
<form action="/proyectos/update" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label>Título</label>
        <input type="text" name="titulo" class="form control" value="{{proy.titulo}}">
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <input type="text" name="descripcion" class="form control" value="{{proy.descripcion}}">
    </div>
    <div class="form-group">
        <label>Url</label>
        <input type="text" name="url" class="form control" value="{{proy.url}}">
    </div>
    <div class="form-group">
        <label>Cliente</label>
        <input type="text" name="cliente" class="form control" value="{{proy.cliente}}">
    </div>
    <div class="form-group">
        <label>Url Cliente</label>
        <input type="text" name="url_cliente" class="form control" value="{{proy.url_cliente}}">
    </div>
    <div class="form-group">
        <label>Categoria</label>
        <select name="categoria" class="form control" value="{{proy.categoria}}">
            <option value="angular">Angular</option>
            <option value="wordpress">Wordpress</option>
            <option value="nodejs">NodeJS</option>
            <option value="frontend">Frontend</option>
            <option value="backend">Backend</option>
        </select>
    </div>
    <div class="form-group">
        <label>Imagen</label>
        <input type="file" name="imagen">
    </div>
    <input type="submit" value="Enviar" class="btn btn-block btn-primary">
</form>